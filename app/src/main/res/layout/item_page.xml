<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/welcome_to_moigae"
        android:textAlignment="center"
        android:maxWidth="280dp"
        android:fontFamily="@font/sfproiddisplaybold"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/TextView_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/recruit_team"
        android:textAlignment="center"
        android:maxWidth="240dp"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/ImageView_illust"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextView_desc"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/content_desc_on_boarding"
        android:src="@drawable/onboarding_illust1" />


</RelativeLayout>