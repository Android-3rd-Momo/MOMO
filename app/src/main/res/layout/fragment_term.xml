<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="495dp"
    tools:context=".presentation.onboarding.term.TermFragment">

    <TextView
        android:id="@+id/tv_termTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TermTitle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_termSubTitle"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:text="@string/TermMiddleTitle"
        android:textSize="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_termTitle"/>

    <CheckBox
        android:id="@+id/cb_allAccept"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/Agree"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_termSubTitle" />

    <TextView
        android:id="@+id/tv_allAcceptDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AgreeDesc"
        android:layout_marginTop="0dp"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toBottomOf="@id/cb_allAccept"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/termline"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_allAcceptDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/cb_term1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/Term1"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_line" />

    <CheckBox
        android:id="@+id/cb_term2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/Term2"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term1"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_accept2_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/See"
        android:textSize="14dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_term2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_term2" />

    <CheckBox
        android:id="@+id/cb_term3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/Term3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_accept3_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/See"
        android:textSize="14dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_term3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_term3" />

    <CheckBox
        android:id="@+id/cb_term4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/Term4"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term3"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/TermComplete"
        android:textSize="18dp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term4" />

    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_accept">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>