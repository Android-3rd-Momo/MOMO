<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="495dp"
    tools:context=".presentation.onboarding.term.TermFragment">

    <TextView
        android:id="@+id/tv_termTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TermTitle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_termSubTitle"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/TermMiddleTitle"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_termTitle" />

    <ImageView
        android:id="@+id/iv_checkbox_allAccept"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checkbox"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_termSubTitle"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/tv_allAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Agree"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_checkbox_allAccept"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkbox_allAccept"
        app:layout_constraintStart_toEndOf="@id/iv_checkbox_allAccept"/>

    <TextView
        android:id="@+id/tv_allAcceptDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AgreeDesc"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_allAccept"
        app:layout_constraintStart_toStartOf="@id/tv_allAccept"/>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/termline"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_allAcceptDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_checkbox_accept1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_line"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/tv_accept1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Term1"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_checkbox_accept1"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkbox_accept1"
        app:layout_constraintStart_toEndOf="@id/iv_checkbox_accept1"/>

    <ImageView
        android:id="@+id/iv_checkbox_accept2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_checkbox_accept1"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/tv_accept2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Term2"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_checkbox_accept2"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkbox_accept2"
        app:layout_constraintStart_toEndOf="@id/iv_checkbox_accept2"/>

    <TextView
        android:id="@+id/tv_accept2_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/See"
        android:textSize="14dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/tv_accept2"
        app:layout_constraintBottom_toBottomOf="@id/tv_accept2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_checkbox_accept3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_checkbox_accept2"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/tv_accept3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Term3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_checkbox_accept3"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkbox_accept3"
        app:layout_constraintStart_toEndOf="@id/iv_checkbox_accept3"/>

    <TextView
        android:id="@+id/tv_accept3_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/See"
        android:textSize="14dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/tv_accept3"
        app:layout_constraintBottom_toBottomOf="@id/tv_accept3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_checkbox_accept4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/checkbox"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_checkbox_accept3"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/tv_accept4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Term4"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_checkbox_accept4"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkbox_accept4"
        app:layout_constraintStart_toEndOf="@id/iv_checkbox_accept4"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/TermComplete"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_checkbox_accept4" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="415dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>