<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".presentation.onboarding.term.TermFragment">

    <TextView
        android:id="@+id/tv_termTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_termSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_middle_title"
        android:textColor="@color/textGrey"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_termTitle"/>

    <CheckBox
        android:id="@+id/cb_allAccept"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/agree"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_termSubTitle" />

    <TextView
        android:id="@+id/tv_allAcceptDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree_desc"
        android:textColor="@color/textGrey"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/tv_termSubTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/termline"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_allAcceptDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/cb_term1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/term1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_line" />

    <CheckBox
        android:id="@+id/cb_term2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/term3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term1"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tv_accept2_desc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/see"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/textGrey"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_term2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_term2" />

    <CheckBox
        android:id="@+id/cb_term3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/term2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_accept3_desc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/see"
        android:textSize="16sp"
        android:textColor="@color/textGrey"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_term3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_term3" />

    <CheckBox
        android:id="@+id/cb_term4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/term4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_accept4_desc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/see"
        android:textSize="16sp"
        android:textColor="@color/textGrey"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_term4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_term4" />

    <CheckBox
        android:id="@+id/cb_term5"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:button="@drawable/term_checkbox"
        android:paddingStart="10dp"
        android:text="@string/term5"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term4"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:padding= "16dp"
        android:text="@string/term_complete"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_term5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"/>



</androidx.constraintlayout.widget.ConstraintLayout>