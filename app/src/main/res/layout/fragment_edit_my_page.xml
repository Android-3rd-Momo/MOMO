<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <include
        android:id="@+id/includeUiState"
        layout="@layout/ui_state_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMyPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBackProfileThumbnail"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@color/blue"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivEditBackProfileThumbnail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icon_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout_corner_stroke"
                android:minHeight="95dp"
                app:layout_constraintTop_toTopOf="@id/ivBackProfileThumbnail">

                <FrameLayout
                    android:id="@+id/llProfileImage"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/circle_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/ivUserProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_profile" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEditProfileImage"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintBottom_toBottomOf="@id/llProfileImage"
                    app:layout_constraintStart_toStartOf="@id/llProfileImage">

                    <ImageView
                        android:id="@+id/ivEditProfileImage"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_camera" />
                </androidx.cardview.widget.CardView>


                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:hint="@string/name"
                    android:textColorHint="@color/hint_grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/llProfileImage"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/etUserSelfIntroduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:hint="@string/please_edit_introduce"
                    android:textColorHint="@color/hint_grey"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/etUserName"
                    app:layout_constraintTop_toBottomOf="@id/etUserName" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnGoOnBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/sfproiddisplaybold"
                android:text="@string/do_login"
                android:textSize="16sp"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserDetailInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo">

                <TextView
                    android:id="@+id/typeOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="@string/dev_occupation"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgTypeTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="8dp"
                    app:chipSpacingHorizontal="4dp"
                    app:chipSpacingVertical="0dp"
                    app:layout_constraintTop_toBottomOf="@id/typeOfDevelopment" />

                <TextView
                    android:id="@+id/programOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="@string/dev_lang"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cgTypeTag" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgProgramTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="4dp"
                    app:chipSpacingVertical="0dp"
                    app:layout_constraintTop_toBottomOf="@id/programOfDevelopment" />

                <TextView
                    android:id="@+id/stackOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="@string/stack"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cgProgramTag" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStackOfDevelopment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    android:minHeight="95dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/stackOfDevelopment">

                    <EditText
                        android:id="@+id/etStackOfDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:gravity="top"
                        android:hint="@string/please_edit_stack"
                        android:minHeight="95dp"
                        android:padding="10dp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCountStackEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="000/500" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/portfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="@string/portfolio"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clStackOfDevelopment" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPortfolioImage"
                    android:layout_width="89dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/portfolio">

                    <ImageView
                        android:id="@+id/ivPortfolioImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_layout_corner_stroke"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_default_upload" />
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPortfolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    android:minHeight="95dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cvPortfolioImage">

                    <EditText
                        android:id="@+id/etPortfolio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:gravity="top"
                        android:hint="@string/please_edit_portfolio"
                        android:minHeight="95dp"
                        android:padding="10dp"
                        android:textColorHint="@color/hint_grey"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCountPortfolioEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="000/500" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/clPortfolio" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCompleteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/bg_btn_state_color"
        android:fontFamily="@font/sfproiddisplaybold"
        android:text="@string/confirm_edit"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>