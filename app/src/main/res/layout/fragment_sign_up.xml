<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboarding.signup.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/sfproiddisplaybold"
            android:text="회원 가입"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="@string/Id"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <!--중복확인 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/etId"
            android:text="중복확인"
            app:layout_constraintBottom_toBottomOf="@id/etId"
            app:layout_constraintTop_toTopOf="@id/etId"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/etId" />

        <EditText
            android:id="@+id/etPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/etEmail" />

        <EditText
            android:id="@+id/etCheckPassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/etPassWord" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="이름"
            app:layout_constraintTop_toBottomOf="@id/etCheckPassWord" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_bg"
            android:hint="전화번호"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="가입하기"
            app:layout_constraintTop_toBottomOf="@id/etNumber" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>