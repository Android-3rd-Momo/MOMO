<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.group.create.CreateGroupFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimpleDescriptionContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivGroupImage"
            android:layout_width="72dp"
            android:layout_height="65dp"
            android:layout_marginTop="60dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="groupName"
            app:layout_constraintEnd_toEndOf="@+id/ivGroupImage"
            app:layout_constraintStart_toStartOf="@+id/ivGroupImage"
            app:layout_constraintTop_toBottomOf="@+id/tvLeaderId" />

        <TextView
            android:id="@+id/tvGroupOneLineDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="groupOneLineDescription"
            app:layout_constraintEnd_toEndOf="@+id/ivGroupImage"
            app:layout_constraintStart_toStartOf="@+id/ivGroupImage"
            app:layout_constraintTop_toBottomOf="@+id/tvGroupName" />


        <TextView
            android:id="@+id/tvLeaderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leaderId"
            app:layout_constraintEnd_toEndOf="@+id/ivGroupImage"
            app:layout_constraintStart_toStartOf="@+id/ivGroupImage"
            app:layout_constraintTop_toBottomOf="@+id/ivGroupImage" />

        <TextView
            android:id="@+id/categoryBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="백엔드"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/categoryPull"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryPull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="풀스택"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/categoryFront"
            app:layout_constraintStart_toEndOf="@+id/categoryBack"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프론트엔드"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/categoryPull"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvGroupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="groupDescription"
        app:layout_constraintStart_toStartOf="@+id/tvProject"
        app:layout_constraintTop_toBottomOf="@+id/tvProject" />

    <TextView
        android:id="@+id/tvFirstDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="firstDate"
        app:layout_constraintStart_toStartOf="@+id/tvSchedule"
        app:layout_constraintTop_toBottomOf="@+id/tvSchedule" />

    <TextView
        android:id="@+id/tvLastDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="tvLastDate"
        app:layout_constraintStart_toEndOf="@+id/tvFirstDate"
        app:layout_constraintTop_toTopOf="@+id/tvFirstDate" />

    <Button
        android:id="@+id/btnJoinProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="프로젝트 참여하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="프로젝트 소개"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clSimpleDescriptionContainer" />

    <TextView
        android:id="@+id/tvSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="모집일정"
        app:layout_constraintStart_toStartOf="@+id/tvGroupDescription"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupDescription" />

    <ImageView
        android:id="@+id/btnEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_edit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gvUserList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstDate" />


</androidx.constraintlayout.widget.ConstraintLayout>