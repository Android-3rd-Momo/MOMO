<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSetUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_setup" />

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_edit" />
    </Toolbar>

    <include
        android:id="@+id/prCircular"
        layout="@layout/ui_state_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMyPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivBackProfileThumbnail"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="#2D64CF"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivEditBackProfileThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/icon_edit"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout_corners"
                android:elevation="5dp"
                android:minHeight="95dp"
                app:layout_constraintTop_toTopOf="@id/ivBackProfileThumbnail">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="57dp"
                    android:layout_height="58.19dp"
                    android:layout_marginStart="17dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivUserProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_profile" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/ivEditProfileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:src="@drawable/icon_edit"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/cardView"
                    app:layout_constraintEnd_toEndOf="@id/cardView" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:textSize="16dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/cardView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="홍길동" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:hint="이름"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/ivGitHub"
                    app:layout_constraintStart_toEndOf="@id/cardView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUserSelfIntroduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:maxLength="40"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/cardView"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    tools:text="자기소개 넣어주세요." />

                <EditText
                    android:id="@+id/etUserSelfIntroduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:hint="자기소개를 작성해주세요."
                    android:textSize="12dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/ivGitHub"
                    app:layout_constraintStart_toStartOf="@id/tvUserName"
                    app:layout_constraintTop_toBottomOf="@id/etUserName" />

                <EditText
                    android:id="@+id/etUserGithub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:hint="깃허브 링크"
                    android:inputType="textUri"
                    android:textSize="14dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/ivGitHub"
                    app:layout_constraintStart_toStartOf="@id/tvUserName"
                    app:layout_constraintTop_toBottomOf="@id/etUserSelfIntroduction" />

                <ImageView
                    android:id="@+id/ivGitHub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/png_github"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGoOnBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="로그인 하기"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserDetailInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo">

                <TextView
                    android:id="@+id/typeOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="개발직군"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgTypeTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:chipSpacing="8dp"
                    app:layout_constraintTop_toBottomOf="@id/typeOfDevelopment" />

                <TextView
                    android:id="@+id/programOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="프로그램"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cgTypeTag" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgProgramTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/programOfDevelopment" />

                <TextView
                    android:id="@+id/stackOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="기술 스택"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cgProgramTag" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clStackOfDevelopment"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    app:layout_constraintTop_toBottomOf="@id/stackOfDevelopment">

                    <EditText
                        android:id="@+id/etStackOfDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:maxLength="500"
                        android:textSize="14dp"
                        android:visibility="gone"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvStackOfDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="기술스택은 ㅇㅇㅇ입니다." />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/portfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="포트폴리오"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clStackOfDevelopment" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPortfolioImage"
                    android:layout_width="89dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/portfolio">

                    <ImageView
                        android:id="@+id/ivPortfolioImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPortfolio"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    app:layout_constraintTop_toBottomOf="@id/cvPortfolioImage">

                    <EditText
                        android:id="@+id/etPortfolio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:textSize="14dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPortfolio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:maxLength="500"
                        android:textSize="14dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="제가 만들었던 프로젝트는 ㅇㅇㅇ입니다." />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCompleteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="편집 완료"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>