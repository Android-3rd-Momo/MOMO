<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSetUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_mypage" />

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_edit" />
    </Toolbar>

    <!--    <include
            android:id="@+id/prCircular"
            layout="@layout/ui_state_loading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBar" />-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMyPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBackProfileThumbnail"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="#2D64CF"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivEditBackProfileThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/icon_camera"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout_corners"
                android:elevation="5dp"
                android:minHeight="95dp"
                app:layout_constraintTop_toTopOf="@id/ivBackProfileThumbnail">

                <FrameLayout
                    android:id="@+id/llProfileImage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfileImage"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/ivUserProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_profile" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEditProfileImage"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="@color/blue"
                    android:visibility="gone"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintBottom_toBottomOf="@id/llProfileImage"
                    app:layout_constraintStart_toStartOf="@id/llProfileImage">

                    <ImageView
                        android:id="@+id/ivEditProfileImage"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_camera" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:textSize="16dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/llProfileImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="홍길동" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:hint="이름"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/llProfileImage"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUserSelfIntroduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:maxLength="40"
                    android:maxLines="2"
                    android:textSize="14dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/llProfileImage"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    tools:text="자기소개 넣어주세요." />

                <EditText
                    android:id="@+id/etUserSelfIntroduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/sfprodisplaymedium"
                    android:hint="자기소개를 작성해주세요."
                    android:textSize="12dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUserName"
                    app:layout_constraintTop_toBottomOf="@id/etUserName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGoOnBoarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:text="로그인 하기"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserDetailInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/clUserInfo">

                <TextView
                    android:id="@+id/typeOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="개발직군"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/clTypeTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/typeOfDevelopment">

                    <TextView
                        android:id="@+id/tvEmptyTypeTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:text="관심있는 직군을 선택해보세요!"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cgTypeTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/programOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="개발언어"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clTypeTag" />


                <LinearLayout
                    android:id="@+id/clProgramTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/programOfDevelopment">

                    <TextView
                        android:id="@+id/tvEmptyProgramTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:text="사용하셨던 프로그램을 선택해보세요!"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cgProgramTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/stackOfDevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="기술 스택"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clProgramTag" />


                <LinearLayout
                    android:id="@+id/clStackOfDevelopment"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/stackOfDevelopment">

                    <EditText
                        android:id="@+id/etStackOfDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:hint="사용하신 기술이 있다면 작성해 보세요!"
                        android:maxLength="500"
                        android:textSize="14dp"
                        android:visibility="gone"
                        app:counterEnabled="true"
                        app:counterMaxLength="500" />

                    <TextView
                        android:id="@+id/tvStackOfDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:textSize="14dp"
                        tools:text="기술스택은 ㅇㅇㅇ입니다." />
                    

                </LinearLayout>

                <TextView
                    android:id="@+id/portfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="포트폴리오"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clStackOfDevelopment" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPortfolioImage"
                    android:layout_width="89dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/portfolio">

                    <ImageView
                        android:id="@+id/ivPortfolioImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_default_upload" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/clPortfolio"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_layout_corner_stroke"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cvPortfolioImage">

                    <EditText
                        android:id="@+id/etPortfolio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:hint="간단한 포트폴리오를 작성해 보세요!"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPortfolio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:maxLength="500"
                        android:textSize="14dp"
                        tools:text="제가 만들었던 프로젝트는 ㅇㅇㅇ입니다." />
                </LinearLayout>

                <Button
                    android:id="@+id/btnCompleteEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3F51B5"
                    android:fontFamily="@font/sfproiddisplaybold"
                    android:text="편집 완료"
                    android:textSize="16dp"
                    android:visibility="gone"
                    app:cornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/clPortfolio" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>